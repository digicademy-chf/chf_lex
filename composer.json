{
    "name": "digicademy/chf_lex",
    "version": "2.0.0",
    "type": "typo3-cms-extension",
    "description": "Create and manage lexicographic data in TYPO3 as part of the CHF",
    "authors": [
        {
            "name": "Jonatan Jalle Steller",
            "email": "jonatan.steller@adwmainz.de",
            "role": "Developer",
            "homepage": "https://www.adwmainz.de"
        },
        {
            "name": "CHF Lex contributors"
        }
    ],
    "license": "GPL-2.0-or-later",
    "homepage": "https://extensions.typo3.org/extension/chf_lex",
    "support": {
        "issues": "https://github.com/digicademy-chf/chf_lex/issues",
        "source": "https://github.com/digicademy-chf/chf_lex",
        "docs": "https://digicademy-chf.github.io/chf_lex"
    },
    "keywords": [
        "TYPO3",
        "Lexicographic data",
        "Encyclopedia",
        "Dictionary",
        "Data",
        "Research",
        "Academia",
        "Academic"
    ],
    "require": {
        "typo3/cms-core": "^13",
        "typo3/cms-extbase": "^13",
        "typo3/cms-fluid": "^13",
        "typo3/cms-fluid-styled-content": "^13",
        "typo3/cms-rte-ckeditor": "^13",
        "digicademy/chf_base": "^2"
    },
    "suggest": {
        "digicademy/chf_bib": "Adds source relations",
        "digicademy/chf_gloss": "Provides a glossary component",
        "digicademy/chf_map": "Contains geodata and maps",
        "digicademy/chf_pub": "Provides publication relations"
    },
    "autoload": {
        "psr-4": {
            "Digicademy\\CHFLex\\": "Classes/"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "chf_lex"
        }
    }
}
